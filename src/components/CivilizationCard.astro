---
interface Props {
    title: string;
    description: string;
    link: string;
    image?: string;
}

const { 
    title, 
    description, 
    link, 
    image = '/default-civilization.jpg' 
} = Astro.props;
---

<div class="civilization-card">
    <a href={link} class="card-link">
        {image && <img src={image} alt={title} class="card-image" />}
        <div class="card-content">
            <h2 class="title">{title}</h3>
            <p>{description}</p>
            <span class="explore-link">Explorar Civilizaci√≥n</span>
        </div>
    </a>
</div>

<style>
    .civilization-card {
        background-color: var(--background-card);
        border-radius: var(--border-radius-md);
        box-shadow: var(--box-shadow);
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .title {
        font-size: 1rem;
    }

    .card-link {
        display: block;
        text-decoration: none;
        color: var(--text-primary);
    }

    .card-image {
        width: 100%;
        height: 250px;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .card-content {
        padding: var(--spacing-md);
    }

    .card-content h3 {
        font-size: var(--font-size-h3);
        margin-bottom: var(--spacing-sm);
        color: var(--text-primary);
    }

    .card-content p {
        color: var(--text-secondary);
        margin-bottom: var(--spacing-md);
    }

    .explore-link {
        color: var(--accent-color);
        font-weight: var(--font-weight-semibold);
        display: inline-block;
    }

    .civilization-card:hover {
        transform: translateY(-10px);
        box-shadow: var(--box-shadow-hover);
    }

    .civilization-card:hover .card-image {
        transform: scale(1.05);
    }
</style>
